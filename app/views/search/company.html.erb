    <div id = "mypage">

      <a href = "company">

        <input type="button" name="search" value="マイぺージ" />

      </a>

    </div>

    <form method="GET" action="/search/company">

    <div id ="s_word">

      検索ワード

      <input type="text" name="s_word" style="width:300px; height:30px"/>

    </div>

    <div id ="e_word">

      除外ワード

      <input type="text" name="e_word" style="width:300px; height:30px"/>

    </div>

    <div id ="result">

      企業検索結果

    </div>

    <div id ="condition">
      詳細条件

      <details>
        <summary>希望職種</summary>
        <input type="radio" name="occ" value = "プログラマ"/>
