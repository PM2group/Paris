        データベースエンジニア
        </br>
        <input type="radio" name="occ" value = "Webエンジニア"/>
        Webエンジニア
        <input type="radio" name="occ" value = "" checked="checked" style="display:none;" />
      </details>

      <details>

        <summary>勤務地</summary>
        <input type="radio" name="loc" value="茨城" />
        茨城</br>
        <input type="radio" name="loc" value="千葉" />
        千葉</br>
        <input type="radio" name="loc" value="東京" />
        東京
        <input type="radio" name="loc" value = "" checked="checked" style="display:none;" />
      </details>

      <details>

        <summary>開発ジャンル</summary>
        <input type="radio" name="system" value="1" />
        1</br>
        <input type="radio" name="system" value="2" />
        2</br>
        <input type="radio" name="system" value="3" />
        3
        <input type="radio" name="system" value = "" checked="checked" style="display:none;" />
      </details>

      <details>

        <summary>給与</summary>
        <input type="radio" name="salary" value="1" />
        1</br>
        <input type="radio" name="salary" value="2" />
        2</br>
        <input type="radio" name="salary" value="3" />
        3
        <input type="radio" name="salary" value = "" checked="checked" style="display:none;" />
      </details>

      <details>

        <summary>フレームワーク</summary>
        <input type="radio" name="frame" value="1" />
        1</br>
        <input type="radio" name="frame" value="2" />
        2</br>
        <input type="radio" name="frame" value="3" />
        3
        <input type="radio" name="frame" value = "" checked="checked" style="display:none;" />
      </details>


      <details>

        <summary>使用言語</summary>
        <input type="radio" name="lang" value="1" />
        1</br>
        <input type="radio" name="lang" value="2" />
        2</br>
        <input type="radio" name="lang" value="3" />
        3
        <input type="radio" name="lang" value = "" checked="checked" style="display:none;" />
        </details>

    </div>

    <div id ="search">
    <%= button_to "検索"%>
    </div>
  
  </form>