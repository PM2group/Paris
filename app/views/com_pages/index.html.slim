h1 企業情報

.mb-3
table.table.table-hover
  thead.thead-default
    tr
      th = Company.human_attribute_name(:会社名)
      th = Company.human_attribute_name(:職種)
      th = Company.human_attribute_name(:場所)
      th = Company.human_attribute_name(:開発言語)
      th = Company.human_attribute_name(:フレームワーク)
  tbody
    tr
      td= @company.com_name
      td= @company.occupations
      td= @company.location
      td= @company.lang
      td= @company.frame
    tr
      th = Company.human_attribute_name(:アピールポイント)
  tbody
    tr
      td= @company.appeal
      - if @company_offers
        - @company_offers.each do |offer|
          tr
            th = CompanyOffer.human_attribute_name(:相手)
            th = CompanyOffer.human_attribute_name(:メッセージ)
          tbody
            tr
              - user = User.find(offer.mem_id)
              td= user.mem_name
              td= offer.message
              td= link_to '学生ページへ', user_page_path(offer.mem_id),class: 'btn btn-primary mr-3'
              - if offer.acc_flag == TRUE
                td= '承認済み'
              - elsif offer.acc_flag == FALSE
                td= '未承認'
  - if current_company
    = link_to '編集する',edit_company_path(current_company),class: 'btn btn-primary mr-3'


.mb-3
table.table.table-hover
  thead.thead-default
    tr
      th 作成したディスカッション一覧
      th パスワード
      th
  tbody
    - @chat_pages.each do |chat_page|
      - if chat_page.designer_name == @company.com_name
        form action=login_chat_path method="GET"
          tr
            |
            input name="id" type="hidden" value="#{chat_page.id}"/ 
            td
              | #{chat_page.theme}
            - if chat_page.readable
              td　未設定
            - else
              td
                |
                input name="password" style=("width:300px; height:30px") type="text"/
            td= button_to "チャットページへ"